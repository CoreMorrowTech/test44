{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "dist": "electron-builder --publish=never",
    "release": "node scripts/build-and-release.js",
    "quick-release": "node scripts/quick-release.js",
    "version:patch": "npm version patch && npm run release",
    "version:minor": "npm version minor && npm run release",
    "version:major": "npm version major && npm run release"
  },
  "build": {
    "appId": "com.example.electronapp",
    "productName": "我的Electron应用",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "我的Electron应用"
    }
  },
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "koffi": "^2.12.3"
  }
  
}
