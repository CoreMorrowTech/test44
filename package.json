{
  "name": "electron-app",
  "version": "1.0.4",
  "description": "A minimal Electron application",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron . --watch . --ext js,html,css,json --ignore node_modules/ --ignore dist/",
    "build": "npm run rebuild && electron-builder",
    "build:win": "npm run rebuild && electron-builder --win --publish=never",
    "dist": "npm run rebuild && electron-builder --publish=never",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "release": "node scripts/build-and-release.js",
    "quick-release": "node scripts/quick-release.js",
    "version:patch": "npm version patch && npm run release",
    "version:minor": "npm version minor && npm run release",
    "version:major": "npm version major && npm run release"
  },
  "build": {
    "appId": "com.example.electronapp",
    "productName": "我的Electron应用",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/koffi/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "我的Electron应用"
    },
    "extraFiles": [
      {
        "from": "3App.dll",
        "to": "3App.dll"
      },
      {
        "from": "device.json", 
        "to": "device.json"
      },
      {
        "from": "config.json",
        "to": "config.json"
      }
    ]
  },
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "koffi": "^2.12.3"
  }
}